<h1>Bugs</h1>
<% if current_user.qa? %>
<%= link_to 'Report Bug', new_project_bug_path(@project) %>
<% end %>

<ul>
  <% @bugs.each do |bug| %>
    <li>
      <%= link_to bug.title, project_bug_path(@project, bug) %> - <%= bug.status %>
      <%= link_to 'Edit', edit_project_bug_path(@project, bug) %> |
      <%= link_to 'Destroy', project_bug_path(@project, bug), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% if bug.screenshot.attached? %>
        <div>
          <%= image_tag bug.screenshot.variant(resize_to_limit: [100, 100]) %>
        </div>
      <% end %>
      </li>
  <% end %>
</ul>

<%= link_to 'Back to Projects', projects_path %>
