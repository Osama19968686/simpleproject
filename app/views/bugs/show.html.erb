<h1><%= @bug.title %></h1>

<p>
  <strong>Description:</strong>
  <%= @bug.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @bug.status %>
</p>

<% if @bug.screenshot.attached? %>
  <p>
    <strong>Screenshot:</strong><br>
    <%= image_tag @bug.screenshot %>
  </p>
<% end %>

<%= link_to 'Edit', edit_project_bug_path(@project, @bug) %> |
<%= link_to 'Back', project_bugs_path(@project) %>
